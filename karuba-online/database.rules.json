{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "games": {
      "decrypto": {
        "$gid": {
          ".read": "data.child('teams').hasChild(auth.uid) || true",
          ".write": "true"
        }
      },
      "karuba": {
        "$gid": {
          ".read": "data.child('players').hasChild(auth.uid)",
          ".write": "data.child('players').hasChild(auth.uid)"
        }
      }
    }
  }
}
